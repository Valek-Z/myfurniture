<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Furniture shop</display-name>
  <welcome-file-list>  
    <welcome-file>home.html</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>shop</servlet-name>
    <jsp-file>/shop.html</jsp-file>
</servlet>
<servlet-mapping>
    <servlet-name>shop</servlet-name>
    <url-pattern>/shop</url-pattern>
</servlet-mapping>
 <servlet>
    <servlet-name>failure</servlet-name>
    <jsp-file>/failure.html</jsp-file>
</servlet>
<servlet-mapping>
    <servlet-name>failure</servlet-name>
    <url-pattern>/shop/failure</url-pattern>
</servlet-mapping>
<servlet>
    <servlet-name>success</servlet-name>
    <jsp-file>/success.html</jsp-file>
</servlet>
<servlet-mapping>
    <servlet-name>success</servlet-name>
    <url-pattern>/shop/success</url-pattern>
</servlet-mapping>
</web-app>